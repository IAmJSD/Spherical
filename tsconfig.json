{
  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "es2020",
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/preact/compat/"],
      "react-dom": ["node_modules/preact/compat/"]
    }
  }
}
